<view class="page">
  <view class="stage">
    <image src="../image/egg-bg.jpg" class="stage-image" />
    <!-- <view class="Td"> -->
    <view class="lanren {{paursed? 'pause' :'' }}">
      <view class="egg {{paursed? 'eggPause':''}}">
        <image wx:if="{{hammer1}}" src="../image/chuizi.png" mode="widthFix" class="hammer" />
        <image wx:if="{{suspend1}}" src="../image/egg-2.png" mode="widthFix" class="egg-item egg-break" />
        <image wx:else src="../image/egg-1.png" mode="widthFix" class="egg-item" bindtap='openEgg1' />
      </view>
      <view class="egg {{paursed? 'eggPause':''}}">
        <image wx:if="{{hammer2}}" src="../image/chuizi.png" mode="widthFix" class="hammer" />
        <image wx:if="{{suspend2}}" src="../image/egg-3.png" mode="widthFix" class="egg-item egg-break" />
        <image wx:else src="../image/egg-1.png" mode="widthFix" class="egg-item" bindtap='openEgg2' />
      </view>
      <view class="egg {{paursed? 'eggPause':''}}">
        <image wx:if="{{hammer3}}" src="../image/chuizi.png" mode="widthFix" class="hammer" />
        <image wx:if="{{suspend3}}" src="../image/egg-3.png" mode="widthFix" class="egg-item egg-break" />
        <image wx:else src="../image/egg-1.png" mode="widthFix" class="egg-item" bindtap='openEgg3' />
      </view>
    </view>
    <!-- </view> -->
  </view>
</view>